<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane fx:id="dashboard" stylesheets="/view/css/dashboard.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.DashboardVC">
   <top>
      <VBox>
         <VBox fx:id="errorMessageContainer" prefHeight="80">
            <Label fx:id="playerTurn" text="Current player: Team Ants"/>
            <Label fx:id="errorMessage"/>
         </VBox>
         <!--<Pane>-->
            <!--<Button fx:id="heal" text="HEAL" onMouseClicked="#clickedHeal" />-->
         <!--</Pane>-->
      </VBox>
   </top>

   <left>
      <Region prefHeight="20"></Region>
      <fx:include fx:id="leftPane" source="SidePaneView.fxml"/>
   </left>

   <center>
      <HBox fx:id="boardContainer" alignment="CENTER">
         <fx:include fx:id="board" source="BoardView.fxml"/>
      </HBox>
   </center>

   <right>
      <fx:include fx:id="rightPane" source="SidePaneView.fxml"/>
   </right>

   <bottom>
      <HBox alignment="CENTER" fx:id="buttonsContainer">
         <VBox alignment="CENTER">
            <Button fx:id="undo" text="UNDO" onMouseClicked="#clickedUndo" />
            <Region prefHeight="10"></Region>
            <Button fx:id="heal" text="HEAL" onMouseClicked="#clickedHeal" />
         </VBox>

      </HBox>
   </bottom>
</BorderPane>